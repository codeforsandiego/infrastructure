- extends "index.haml"
- block title
  Infrastructure
- load infrastructure_project_tags 
- block sidebar
  - show_shortcuts
  
- block content
  - load humanize
  #dashboard
    .map-container
      %h1 CIP San Diego
      %h5 Capital Improvements Program (CIP)
      #map{style: "background: #ccc;"}
    .content
      - for widget_row in widgets
        .row
          %h2 {{widget_row.title}}
          - for widget in widget_row.row
            .widget
              %h6{class: '{{widget.widget_class}}' }= widget.headline
              .content
                %h2 {{widget.value}}
