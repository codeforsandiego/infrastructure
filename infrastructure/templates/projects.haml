- extends "application.haml"
- block title
  Infrastructure
- load infrastructure_project_tags 
- block sidebar
  - show_shortcuts
  
- block content
  - load humanize
  #filter
    %h5 Filter
    %form#projects_filter{ method: "post", action: "/projects/filter"}
        - csrf_token
        %ul
          = form.as_ul
        %input#page{ type:"hidden", name: "page", value: 1}
      .clear
      %br
      %input#submit{ type:"submit", value:"Filter" }
      %input#submit{ type:"reset", value:"Reset Form" }

  #project-list
    %h3 Currently running Projects ordered by Award start
    - pagination_count
    #projects
      %ul.tabs
        %li{class: 'active'}
          %a{href: "#", "data-tab": "list" }
            %img{src: "{{STATIC_URL}}/images/icons/glyphicons_114_list.png"}
        %li.last
          %a{href: "#", "data-tab": "stats" }
            %img{src: "{{STATIC_URL}}/images/icons/glyphicons_040_stats.png"}
      %ul.views{style: 'display:none;'}
        %li
          %a{href: '#'} Expanded
        %li.last
          %a{href: '#'} Compact
      #stats.tab-view
        - widgets
      #list.tab-view
        - for project in projects
          - project_list_item project
        - pagination
