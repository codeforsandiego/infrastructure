- extends "application.haml"
- block title
  Infrastrucutre
- load tags 
- block sidebar
  - show_shortcuts
  
- block content
  - load humanize
  %h2 Current Projects
  #filter
    %h5 Filter
    %form#projects_filter{ method: "post", action: "/projects/filter"}
        - csrf_token
        = form.as_ul
        %input#page{ type:"hidden", name: "page", value: 1}
      %li
        %input#submit{ type:"submit", value:"Submit Form" }

  #projects
    - for project in projects
      - url 'project_detail' project.pk as project_url
      %h4
        %a{'href': "{% url 'project_detail' project.pk %}"}= project.SP_PROJECT_NM
      %p Finish: {{project.SP_CONSTR_FINISH_DT}}, Phase: {{project.SP_PROJECT_PHASE}}, project cost: ${{project.SP_TOTAL_PROJECT_COST|intcomma}} 
