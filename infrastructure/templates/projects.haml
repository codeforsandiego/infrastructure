- extends "application.haml"
- block title
  Infrastructure
- load infrastructure_project_tags 
- block sidebar
  - show_shortcuts
  
- block content
  - load humanize
  #filter
    %h5 Filter
    %form#projects_filter{ method: "post", action: "/projects/filter"}
        - csrf_token
        = form.as_ul
        %input#page{ type:"hidden", name: "page", value: 1}
      %li
        %input#submit{ type:"submit", value:"Submit Form" }

  #project-list
    %h3 Currently running Projects ordered by Award start
    - pagination_count
    #projects
      %ul.tabs
        %li
          %a{href: "#" }
            %img{src: "{{STATIC_URL}}/images/icons/glyphicons_370_globe_af.png"}
        %li{class: 'active'}
          %a{href: "#" }
            %img{src: "{{STATIC_URL}}/images/icons/glyphicons_114_list.png"}
        %li.last
          %a{href: "#" }
            %img{src: "{{STATIC_URL}}/images/icons/glyphicons_040_stats.png"}
      %ul.views
        %li
          %a{href: '#'} Expanded
        %li.last
          %a{href: '#'} Compact
      #stats
        - widgets
      #projects-list
        - for project in projects
          - project_list_item project
        - pagination
